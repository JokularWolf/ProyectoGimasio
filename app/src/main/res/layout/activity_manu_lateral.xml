<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1F1F3A"
    android:padding="16dp">

    <!-- Imagen o icono en la parte superior -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pesa"
        android:layout_gravity="center"
        android:contentDescription="Logo" />

    <TextView
        android:id="@+id/opcion_historial_progreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Historia de progreso"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/opcion_actualizar_informacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Actualizar información"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <!-- Botones adicionales (Ver más) -->

</LinearLayout>
